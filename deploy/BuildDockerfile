FROM ubuntu:16.04

# Install software-properties-common which contains apt-add-repository
RUN apt-get update
RUN apt-get install -y software-properties-common

# Add PPA containing ghc and cabal
RUN apt-add-repository -y ppa:hvr/ghc
RUN apt-get update

# Install required packages
RUN apt-get install -y cabal-install-2.2 ghc-8.2.2 zlib1g-dev

# Run cabal new-update, which annoyingly requires a cabal.project file
RUN touch cabal.project
RUN /opt/cabal/bin/cabal new-update
RUN rm cabal.project
RUN rm -rf dist-newstyle
